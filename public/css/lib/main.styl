blue = #33577E
brown = #5B3922

html, body
  width 100%
  font-family "HelveticaNeue-Light", "Lato", sans-serif
 
 a
 	text-decoration none

.nav
	height 125px
	width 100%
	background-color #fff
	-webkit-box-shadow 0px 5px 5px 0px rgba(50, 50, 50, 0.2)
	-moz-box-shadow    0px 5px 5px 0px rgba(50, 50, 50, 0.2)
	box-shadow         0px 5px 5px 0px rgba(50, 50, 50, 0.2)

.logo
	height 125px

.logo-container
	margin 0 auto
	font-family "HelveticaNeue-UltraLight"
	margin-top 28px
	span
		text-transform uppercase
		font-size 48px
		color brown
	.last-name
		font-weight: 600

.nav-links
	.active
		padding 5px 20px
		border 3px solid blue
		a
			color blue

.nav-list
	list-style none
	text-align right
	margin 35px 0
	li
		display inline-block
	li:not(:last-child)
		margin-right 10%
	a
		text-transform uppercase
		color #000
		font-size 24px
		&:hover
			text-decoration none
			color blue




